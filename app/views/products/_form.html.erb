
<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :nombre %>
    <%= form.text_field :nombre, id: :product_nombre %>
  </div>

  <div class="field">
    <%= form.label :descripción %>
    <%= form.text_field :descripción, id: :product_descripción %>
  </div>

  <div class="field">
    <%= form.label :precio %>
    <%= form.number_field :precio, id: :product_precio %>
  </div>

  <div class="field">
    <%= form.label :moneda %>
    <%= form.text_field :moneda, id: :product_moneda %>
  </div>

  <div class="field">
    <%= form.label :vendido %>
    <%= form.check_box :vendido, id: :product_vendido %>
  </div>

  <div class="field">
  <%= form.label :photo %>
  <%= form.file_field :photo, id: :photo_image %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
